<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Numérologie - Connexion espace client</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('compiled/extranet.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body class="bg-gradient-info">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <div class="row" style="min-height:500px;">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>

                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Bienvenue !</h1>
                                        </div>

                                        {% if error is defined and error %}
                                            <span>{{ error }}</span>
                                        {% endif %}

                                        {% for owner in hwi_oauth_resource_owners() %}
                                            <a href="{{ hwi_oauth_login_url(owner)|replace({'http:': 'https:'}) }}" class="btn btn-success btn-user btn-block">
                                                <i class="fa fa-sign-in-alt"></i> Se connecter
                                            </a>
                                        {% endfor %}
                                    </div>

                                    <div class="text-center my-0" style="position:absolute;bottom:0;width:100%;">
                                        <span>Copyright &copy; Jean-Michel Mazaudier 2019</span>

                                        <a class="nav-link" href="javascript:void(0);">
                                            <span class="mr-2 d-none d-lg-inline text-gray-600 small"><em>Date de dernière mise à jour : {% include 'latest.html.twig' %}</em></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="{{ asset("compiled/common.js") }}"></script>
        <script type="text/javascript" src="{{ asset("compiled/extranet.js") }}"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    </body>
</html>