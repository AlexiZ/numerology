<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('compiled/app.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="page-top">
        <div id="wrapper">
            <ul class="navbar-nav bg-gradient-success sidebar sidebar-dark accordion" id="accordionSidebar">
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('numerologie_index') }}">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-sort-numeric-up"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Numérologie</div>
                </a>

                {% block navbar %}{% endblock navbar %}

                <hr class="sidebar-divider d-none d-md-block">

                <!-- Sidebar Toggler (Sidebar) -->
                <div class="text-center d-none d-md-inline">
                    <button class="rounded-circle border-0" id="sidebarToggle">
                        <i class="fa fa-arrows-alt-h"></i>
                    </button>
                </div>
            </ul>

            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="javascript:void(0);">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small"><em>Date de dernière mise à jour : 26 mars 2019</em></span>
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <div class="container-fluid">
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">{% block pagetitle %}{% endblock pagetitle %}</h1>
                        </div>

                        {% block body %}{% endblock %}
                    </div>
                </div>

                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Jean-Michel Mazaudier 2019</span>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset("compiled/common.js") }}"></script>
            <script type="text/javascript" src="{{ asset("compiled/app.js") }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}
    </body>
</html>
