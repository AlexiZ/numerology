<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('compiled/app.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="page-top">
        <div id="wrapper">
            <ul class="navbar-nav bg-gradient-success sidebar sidebar-dark accordion" id="accordionSidebar">
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('numerologie_index') }}">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-sort-numeric-up"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Numérologie</div>
                </a>

                <hr class="sidebar-divider my-0">

                <li class="nav-item">
                    <a class="nav-link{% if 'numerologie_index' == app.request.get('_route') %} active{% endif %}" href="{{ path('numerologie_index') }}">
                        <i class="fas fa-fw fa-home"></i>
                        <span>Accueil</span>
                    </a>
                </li>

                {% block navbar %}{% endblock navbar %}

                {% if is_granted('ROLE_ADMIN') %}
                    <hr class="sidebar-divider">

                    <li class="nav-item">
                        <a class="nav-link{% if 'numerologie_admin' == app.request.get('_route') %} active{% endif %}" href="{{ path('numerologie_admin') }}">
                            <i class="fas fa-fw fa-cog"></i>
                            <span>Administration</span>
                        </a>
                    </li>
                {% endif %}

                <hr class="sidebar-divider d-none d-md-block">

                <!-- Sidebar Toggler (Sidebar) -->
                <div class="text-center d-none d-md-inline">
                    <button class="rounded-circle border-0" id="sidebarToggle">
                        <i class="fa fa-arrows-alt-h"></i>
                    </button>
                </div>
            </ul>

            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                        <div class="d-none d-sm-inline-block mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <a class="nav-link" href="javascript:void(0);">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"><em>Date de dernière mise à jour : 28 mars 2019</em></span>
                            </a>
                        </div>

                        <ul class="navbar-nav ml-auto">
                            <div class="topbar-divider d-none d-sm-block"></div>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{ app.user.username }}</span>
                                    <i class="fa fa-user btn btn-sm btn-primary btn-circle"></i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="{{ path('auth0_logout') }}">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Se déconnecter
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </nav>

                    <div class="container-fluid">
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">{% block pagetitle %}{% endblock pagetitle %}</h1>
                        </div>

                        {% block body %}{% endblock %}
                    </div>
                </div>

                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Jean-Michel Mazaudier 2019</span>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <div class="modal fade" id="standardModal" tabindex="-1" role="dialog" aria-labelledby="standardModalLabel" style="display: none;" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="standardModalLabel"></h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>

                    <div class="modal-body"></div>

                    <div class="modal-footer">
                        <button class="btn btn-success" type="button" data-dismiss="modal">J'ai compris</button>
                    </div>
                </div>
            </div>
        </div>

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset("compiled/common.js") }}"></script>
            <script type="text/javascript" src="{{ asset("compiled/app.js") }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}
    </body>
</html>
