<table class="table automatic-table" id="historyTable">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Date d'ajout</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {% for filename, timestamp in histories %}
            {% set subject = filename|getSubject %}
            <tr>
                <td>
                    <a href="{{ url('numerologie_show', {'filename': filename}) }}" title="Afficher" class="btn">{{ subject }}</a>
                </td>
                <td>Le {{ timestamp|date('d/m/Y \à H:m') }}</td>
                <td>
                    <a href="{{ url('numerologie_show', {'filename': filename}) }}" title="Afficher" class="btn btn-success btn-circle btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ url('numerologie_edit', {'md5': filename}) }}" title="Modifier" class="btn btn-primary btn-circle btn-sm">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a href="{{ path('numerologie_export_pdf', {'md5': filename}) }}" title="Télécharger pour imprimer" class="btn btn-info btn-circle btn-sm">
                        <i class="fas fa-print"></i>
                    </a>
                    <a href="{{ url('numerologie_delete', {'md5': filename}) }}" title="Supprimer" class="btn btn-danger btn-circle btn-sm">
                        <i class="fas fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
