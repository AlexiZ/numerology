<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    Tous les noms et prénoms
                </h6>
            </div>

            <div class="card-body">
                {% include '@App/Numerologie/_table_lettres.html.twig' with {'mot': subject.fullNames} %}
            </div>
        </div>
    </div>

    {% if subject.useName|default %}
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Nom d'usage
                    </h6>
                </div>

                <div class="card-body">
                    {% include '@App/Numerologie/_table_lettres.html.twig' with {'mot': subject.useName, 'moyen': [25, 30, 27, 10]} %}
                </div>
            </div>
        </div>
    {% endif %}

    {% if subject.birthName|default %}
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Nom de naissance
                    </h6>
                </div>

                <div class="card-body">
                    {% include '@App/Numerologie/_table_lettres.html.twig' with {'mot': subject.birthName, 'moyen': [25, 30, 27, 10]} %}
                </div>
            </div>
        </div>
    {% endif %}

    {% if subject.pseudos is not empty %}
        {% set pseudos = '' %}
        {% for pseudo in subject.pseudos %}
            {% set pseudos = pseudos~pseudo %}
        {% endfor %}

        {% if pseudos|default %}
            <div class="col-lg-12 mb-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            Surnoms
                        </h6>
                    </div>

                    <div class="card-body">
                        {% include '@App/Numerologie/_table_lettres.html.twig' with {'mot': pseudos} %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}

    {% if subject.firstName|default %}
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Prénom d'usage
                    </h6>
                </div>

                <div class="card-body">
                    {% include '@App/Numerologie/_table_lettres.html.twig' with {'mot': subject.firstName} %}
                </div>
            </div>
        </div>
    {% endif %}

    {% if subject.otherFirstnames|default %}
        {% set others = '' %}
        {% for other in subject.otherFirstnames %}
            {% set others = others~other %}
        {% endfor %}

        {% if others|default %}
            <div class="col-lg-12 mb-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            Prénoms masqués
                        </h6>
                    </div>

                    <div class="card-body">
                        {% include '@App/Numerologie/_table_lettres.html.twig' with {'mot': others} %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
</div>
