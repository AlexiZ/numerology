{% extends '@Extranet/base.html.twig' %}

{% block title %}
    Numérologie - Panneau d'administration
{% endblock %}

{% block pagesubtitle %}
    <a href="{{ path('extranet_index') }}" class="btn btn-light btn-icon-split">
        <span class="icon text-gray-600">
            <i class="fa fa-arrow-left"></i>
        </span>
        <span class="text">Retour à la page d'accueil</span>
    </a>
{% endblock pagesubtitle %}

{% block body %}
    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Gestion des utilisateurs
                    </h6>
                </div>

                <div class="card-body text-center">
                    <p>
                        <em>Liste de tous les utilisateurs de l'espace client. Permet d'autoriser ou de bloquer l'accès à un utilisateur.</em>
                    </p>
                    <hr class="sidebar-divider d-none d-md-block">
                    <a href="{{ path('admin_users_list') }}" class="btn btn-info btn-icon-split">
                        <span class="icon text-white-50"><i class="fas fa-plus"></i></span>
                        <span class="text">Utilisateurs</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Gestion des numéros
                    </h6>
                </div>

                <div class="card-body text-center">
                    <p>
                        <em>Toutes les analyses de numéros par thème.</em>
                    </p>
                    <hr class="sidebar-divider d-none d-md-block">
                    <a href="{{ path('admin_numbers_list') }}" class="btn btn-info btn-icon-split">
                        <span class="icon text-white-50"><i class="fas fa-plus"></i></span>
                        <span class="text">Numéros</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Définitions
                    </h6>
                </div>

                <div class="card-body text-center">
                    <p>
                        <em>Toutes les définitions de concepts.</em>
                    </p>
                    <hr class="sidebar-divider d-none d-md-block">
                    <a href="{{ path('admin_definitions_list') }}" class="btn btn-info btn-icon-split">
                        <span class="icon text-white-50"><i class="fas fa-plus"></i></span>
                        <span class="text">Définitions</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Historique complet
                    </h6>
                </div>

                <div class="card-body">
                    {% include '@Extranet/Analysis/_history.html.twig' with {'subjects': subjects} %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}