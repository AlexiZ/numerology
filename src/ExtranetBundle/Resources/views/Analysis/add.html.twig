{% extends '@Extranet/base.html.twig' %}

{% block title %}
    Nouvelle étude
{% endblock %}

{% block bodyAttr %}data-tutorial="extranet_add"{% endblock bodyAttr %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            {% if form.vars.errors|length > 0 %}
                <div class="card mb-4 py-3 border-left-danger">
                    <div class="card-body">
                        {{ 'analysis.add.error'|transchoice(form.vars.errors|length) }}

                        <ul>
                            {% for error in form.vars.errors.form.getErrors(true) %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Ajouter une nouvelle personne
                    </h6>
                </div>

                <div class="card-body">
                    {% form_theme form '@Extranet/Analysis/_form_theme.html.twig' %}

                    {{ form_start(form) }}
                        {{ form_rest(form) }}

                        <button type="submit" id="submitAdd" class="btn btn-success btn-icon-split">
                            <span class="icon text-white-50"><i class="fas fa-check"></i></span>
                            <span class="text">Voir les résultats</span>
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://maps.googleapis.com/maps/api/js?key={{ gj_api_key }}&libraries=places&language=fr"></script>
    <script async defer src="{{ asset('bundles/extranet/js/autocomplete.js') }}"></script>
{% endblock %}
