{% set labels = ['Lettres - Nombre héréditaire', 'Voyelles - Nombre social', 'Consonnes - Nombre de structure'] %}
{% if 'firstname' == type %}
    {% set labels = ['Lettres - Nombre de mission', 'Voyelles - Nombre social', 'Consonnes - Nombre de structure'] %}
{% endif %}

<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            {% for lettre in mot|split('') %}
                <th>{{ lettre }}</th>
            {% endfor %}
            <th>Total</th>
            <th>Réduit</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <th scope="row">{{ labels[0] }}</th>
            {% for lettre in mot|split('') %}
                <td>{{ lettre|lettre }}</td>
            {% endfor %}
            <td>{{ mot|totalLettre }}</td>
            <td>{{ mot|totalReduitLettre }}</td>
        </tr>
        <tr>
            <th scope="row">{{ labels[1] }}</th>
            {% for lettre in mot|split('') %}
                <td>{{ lettre|voyelle }}</td>
            {% endfor %}
            <td>{{ mot|totalVoyelle }}</td>
            <td>{{ mot|totalReduitVoyelle }}</td>
        </tr>
        <tr>
            <th scope="row">{{ labels[2] }}</th>
            {% for lettre in mot|split('') %}
                <td>{{ lettre|consonne }}</td>
            {% endfor %}
            <td>{{ mot|totalConsonne }}</td>
            <td>{{ mot|totalReduitConsonne }}</td>
        </tr>
    </tbody>
</table>