                    <a class="d-flex justify-content-between align-items-center" href="#" data-toggle="collapse" data-target="#collapseNombreMoyen" aria-expanded="true" aria-controls="collapseNombreMoyen">
                        Nombre moyen de pr√©sence de chaque lettre
                        <span class="badge badge-primary badge-pill">{{ fullNames|nombreMoyenLettres|number_format(1, '.', ' ') }}</span>
                    </a>
                </h6>
            </div>

            <div id="collapseNombreMoyen" class="collapse" aria-labelledby="headingNombreMoyen" data-parent="#accordionNombreMoyen">
                <div class="card-body">
                    <p><small><em>{{ getDefinition('meanLetter')|raw }}</em></small></p>
                    <p>XXX</p>
                </div>
            </div>
        </div>
    </div>

