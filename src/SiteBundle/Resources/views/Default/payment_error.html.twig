{% extends '@Site/base.html.twig' %}

{% block title %}
    Erreur lors de votre paiement
{% endblock %}

{% block bodyAttr %}class="tryPage"{% endblock bodyAttr %}

{% block body %}
    <header class="masthead">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="card card-signin flex-row my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Paiement de votre étude numérologique complète</h5>

                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        Une erreur est survenue lors du paiement de votre étude, merci de recommencer <a href="{{ path('site_payment_error', {'hash': subject.hash}) }}">en cliquant sur ce lien</a>.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock body %}