{% extends '@Site/base.html.twig' %}

{% block title %}{{ parent() }} - Essayez gratuitement{% endblock %}

{% block bodyAttr %}class="tryPage"{% endblock bodyAttr %}

{% block body %}
    <header class="masthead">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="card card-signin flex-row my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Renseignez les paramètres de vie</h5>

                            {% form_theme form '@Site/Commons/_form_theme.html.twig' %}

                            {{ form_start(form, {'attr': {'class': 'form-signin'}}) }}
                                {{ form_errors(form) }}

                                <div class="row">
                                    <div class="form-label-group col-md-6">
                                        {{ form_widget(form.birthName, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_label(form.birthName) }}
                                    </div>

                                    <div class="form-label-group col-md-6">
                                        {{ form_widget(form.useName, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_label(form.useName) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-label-group col-md-6">
                                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_label(form.firstname) }}
                                    </div>

                                    <div class="form-label-group col-md-6">
                                        {{ form_widget(form.otherFirstnames) }}
                                        <button type="button"
                                                class="add-another-collection-widget btn btn-primary"
                                                data-list="#otherFirstnames-fields-list"
                                                data-label="Autre prénom">
                                            Ajouter un autre prénom
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-label-group col-md-6">
                                        {{ form_widget(form.birthDate, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_label(form.birthDate) }}
                                    </div>

                                    <div class="form-label-group col-md-6">
                                        {{ form_widget(form.birthPlace, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_label(form.birthPlace) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        {{ form_widget(form.pseudos) }}
                                        <button type="button"
                                                class="add-another-collection-widget btn btn-primary"
                                                data-list="#pseudos-fields-list"
                                                data-label="Pseudonyme">
                                            Ajouter un pseudonyme
                                        </button>
                                    </div>
                                </div>

                                {{ form_rest(form) }}

                                <hr class="my-4">

                                {% if 'free' == version %}
                                    <button class="btn btn-lg btn-info btn-block text-uppercase" type="button" data-toggle="modal" data-target="#analysisConfirmation">
                                        <i class="fa fa-check mr-2"></i> Générer cette étude numérologique gratuite
                                        <br><small><em>(Pour que l'analyse soit correcte, n'oubliez aucun nom ou prénom.)</em></small>
                                    </button>
                                {% else %}
                                    <button class="btn btn-lg btn-success btn-block text-uppercase" type="button" data-toggle="modal" data-target="#analysisConfirmation">
                                        <i class="fa fa-check mr-2"></i> Générer cette étude numérologique complète
                                        <br><small><em>(Pour que l'analyse soit correcte, n'oubliez aucun nom ou prénom.)</em></small>
                                        <br><small><em>(Vous allez être dirigé vers l'interface de paiement.)</em></small>
                                    </button>
                                {% endif %}

                                <div class="modal fade" id="analysisConfirmation" tabindex="-1" role="dialog" aria-labelledby="analysisConfirmationLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="analysisConfirmationLabel">Validez votre saisie</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>

                                            <div class="modal-body">
                                                Assurez-vous que votre saisie soit correcte avant de passer à l'étape suivante.
                                                <br>
                                                Vous ne pourrez plus revenir en arrière !
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Modifier ma saisie</button>
                                                <button type="submit" class="btn btn-primary">Valider</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock body %}