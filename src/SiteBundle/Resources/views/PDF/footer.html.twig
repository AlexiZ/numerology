<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <script>
            /* page counter */
            function subst() {
                var vars = {};
                var x = document.location.search.substring(1).split('&');
                for (var i in x) {
                    var z = x[i].split('=', 2);
                    vars[z[0]] = unescape(z[1]);
                }
                var x = ['topage', 'page'];
                for (var i in x) {
                    var y = document.getElementsByClassName(x[i]);
                    for (var j = 0; j < y.length; ++j) {
                        y[j].textContent = vars[x[i]];
                    }
                }
            }
        </script>
        <style>
            footer {
                padding-top: 15px;
                color: #858796;
            }
        </style>
    </head>

    <body onload="subst()">
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <table>
                    <tr>
                        <td style="width: 34%;" class="center"><span class="page"></span>/<span class="topage"></span></td>
                        <td style="width: 33%;" class="right">Copyright &copy; Jean-Michel Mazaudier {{ "now"|date("Y") }}</td>
                    </tr>
                </table>
            </div>
        </footer>
    </body>
</html>